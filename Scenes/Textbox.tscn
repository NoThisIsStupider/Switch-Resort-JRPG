code = "shader_type canvas_item;

//This shader is used to control the opening and closing animation of the textbox, as well as properly shading the textbox (the texture has no shading)

uniform float ysquish = 0f;

void fragment()
{
	float uv_y = UV.y - 0.5f; //translate the texture down so it's centered on 0, that way division can be used on it
	float alpha = 1f;
	
	//make the pixel transparent when it falls outside the bounds of the textbox after squishing
	if (uv_y > 0.5 * ysquish || uv_y < -0.5 * ysquish)
	{
		alpha = 0f;
	}
	
	uv_y *= 1f/ysquish; //divide by ysquish so the texture is squished
	uv_y += 0.5f; //reverse the previous subtract so the texture is returned to being placed correctly
	
	//this block handles drawing the colour and shading the textbox
	COLOR = texture(TEXTURE, vec2(UV.x, uv_y));
	COLOR.a *= alpha;
	COLOR.r *= 1f - uv_y * 2f + 1f;
	COLOR.g *= 1f - uv_y * 2f + 1f;
	COLOR.b *= 1f - uv_y * 2f + 1f;
}"

